<!DOCTYPE html>
<html>
<head>
  <title>Forum</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
      <% if current_user %>
          <%= link_to('登出', destroy_user_session_path, :method => :delete,:class=>"btn btn-default") %> |
          <%= link_to('修改密碼', edit_registration_path(:user),:class=>"btn btn-default") %>
      <% else %>
          <%= link_to('註冊', new_registration_path(:user),:class=>"btn btn-default") %> |
          <%= link_to('登入', new_session_path(:user),:class=>"btn btn-default") %>
      <% end %>

<%= yield %>

</body>
</html>
